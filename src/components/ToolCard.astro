---
export interface Props {
	title: string;
	desc: string;
	url: string;
	icon?: string;
	isEasterEgg?: boolean;
	key?: number;
}

const {
	title,
	desc,
	url,
	icon = "üõ†Ô∏è",
	isEasterEgg = false,
    key,
} = Astro.props;

const cardId = `tool-card-${title.replace(/\s+/g, "-").toLowerCase()}`;
---

<a
  id={cardId}
  href={url}
  class:list={[
    "block rounded-xl card-base p-6 shadow hover:shadow-lg transition-shadow duration-200",
    isEasterEgg && "easter-egg-card",
    isEasterEgg && "animate-pulse opacity-50"
  ]}
  {...(isEasterEgg && {
    "data-is-easter-egg": "true",
    "data-key": key,        // ‚òÖ Êää‰∏ãÊ†áÂÜôËøõ HTML
  })}
>
  <div class="flex items-center gap-4">
    <span class="text-3xl">{icon}</span>
    <div>
      <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">
        {title}
      </h3>
      <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">
        {desc}
      </p>
    </div>
  </div>
</a>